<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="examen3.facturas_tree_list">
      <field name="name">Facturas</field>
      <field name="model">examen3.facturas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fecha"/>
          <field name="base"/>
          <field name="iva"/>
          <field name="total"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="examen3.facturas_tree_form">
      <field name="name">Facturas</field>
      <field name="model">examen3.facturas</field>
      <field name="arch" type="xml">
        <form string = "Nueva Factura">
          <sheet>
            <group>
              <field name="name"/>
              <field name="fecha"/>
              <field name="cliente"/>
              <field name="base"/>
              <field name="iva"/>
              <field name="total"/>
              <field name="detalle"/>
                <tree>
                  <field name="id_producto"/>
                  <field name="cantidad"/>
                </tree>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="examen3.action_window_facturas">
      <field name="name">Facturas</field>
      <field name="res_model">examen3.facturas</field>
      <field name="view_mode">tree,form</field>
    </record>


